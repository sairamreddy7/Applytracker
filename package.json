{
  "name": "applytrack-pro",
  "version": "1.0.0",
  "description": "Production-ready, multi-user Job Application Tracker",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm install --include=dev && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install --include=dev"
  },
  "keywords": [
    "job-tracker",
    "application-tracker",
    "career"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}